<div class="search-box">
  <h1>CMD Base</h1>
  <form method="get" action="/">
    <input type="text" name="q" placeholder="Zoeken..." value="<%= query %>" />
    <button type="submit">Zoeken</button>
  </form>
</div>

<% if (results.length > 0) { %>
<ul>
  <% results.forEach(result => { %>
  <li>
    <a href="/item/<%= result.id %>"><%= result.Naam %></a>
    <!-- Link to item detail page -->
    <p><%= result.Ondertitel %></p>
  </li>
  <% }) %>
</ul>

<% } else if (query) { %>
<p>Geen resultaten gevonden voor "<%= query %>"</p>
<% } %>
